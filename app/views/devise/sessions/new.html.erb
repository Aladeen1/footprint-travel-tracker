<div class="devise__interface__container">
    <!-- <p>Register an account will allow you to add your flights, see your footprint and map as well as join contests with your peers</p> -->
    <p>Please <%= link_to "Sign up", new_registration_path(resource_name) %> if you don't have an account yet</p>
    <h2>Login</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Password",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Remember me", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="interface__submit">
        <button type="submit">Log in</button>
      </div>
    <% end %>

    <div class="login__bottom__links">
      <%= render "devise/shared/links" %>
    </div>
</div>
<p style="text-align:center;">Your privacy is important to us.</br>
  Your information will be kept confidential and they will not be sold to 3rd parties.</br>
  Thanks to the verification code, only people within your contest will be able to see your footprint and flights.
</p>
