<div class="devise__interface__container">
    <p><%= link_to "Sign up", new_registration_path(resource_name) %> if you don't have an account yet</p>
    <h2>Login</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Password",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Remember me", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="interface__submit">
        <button type="submit">Log in</button>
      </div>
    <% end %>

    <div class="login__bottom__links">
      <%= render "devise/shared/links" %>
    </div>
</div>